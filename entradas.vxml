<vxml version="2.1" xml:lang="es-ES">

  <menu accept="aproximate">
    <prompt> Â¿Desea comprar entradas para la visita o consultar los
      horarios? </prompt>
    <choice next="#comprar"> comprar </choice>
    <choice next="#horarios"> horario </choice>
    <choice next="asistente.vxml"> salir </choice>
    <catch event="nomatch noinput help"> <reprompt /> </catch>
  </menu>

  <form id = "comprar">
    <field name = "dia">
      <prompt>
        Para que dia de la semana le gustaria comprar entradas?
      </prompt>
      <grammar src = "grammars/dias.jsgf"/>
      <filled>
        <if cond="dia == 'lunes'">
          Lo siento, no quedan entradas disponibles para el Lunes.
        </if>
      </filled>
    </field>
  </form>

  <form id = "horarios">
    <block>
      Form comprar
    </block>
  </form>
</vxml>
